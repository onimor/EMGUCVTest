<Window x:Class="EMGUCVTest.HostTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EMGUCVTest"
        mc:Ignorable="d"
        Title="HostTestWindow" Height="450" Width="800"
        DataContext="{x:Static local:HostTestViewModel.Instance}">
    <Grid>
        <local:EmguImageBoxHost x:Name="host"
                                Image="{Binding ImageArray}"/>
    </Grid>
</Window>
